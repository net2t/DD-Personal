# ============================================================================
# DamaDam Bot - Environment Sample
# Copy this file to .env and fill your real values.
# IMPORTANT: Do NOT commit your real .env to Git.
# ============================================================================

# ----------------------------
# DamaDam Credentials (Primary)
# ----------------------------
DD_LOGIN_EMAIL=
DD_LOGIN_PASS=

# ----------------------------
# DamaDam Credentials (Secondary - optional fallback)
# If primary login fails, bot will try these.
# ----------------------------
DD_LOGIN_EMAIL2=
DD_LOGIN_PASS2=

# ----------------------------
# Google Sheets
# ----------------------------
# Main sheet contains tabs: MsgList, PostQueue, InboxQueue, MsgHistory
DD_SHEET_ID=

# Optional: Profiles sheet (Phase 1 profile scraping output)
DD_PROFILES_SHEET_ID=

# Google service account JSON key filename/path
CREDENTIALS_FILE=credentials.json

# ----------------------------
# Browser / Selenium
# ----------------------------
# If this is a relative path, it is resolved relative to the repo root.
CHROMEDRIVER_PATH=chromedriver.exe

# ----------------------------
# Bot Settings
# ----------------------------
# 1 = debug logs, 0 = normal
DD_DEBUG=0

# 0 = unlimited
DD_MAX_PROFILES=0

# Message mode: how many profile pages to scan to find an open post
DD_MAX_POST_PAGES=4

# Post mode: delay between posts (DamaDam rate limit)
DD_POST_COOLDOWN_SECONDS=120

# Post mode: retry behavior
# 1 = re-run rows with STATUS=Failed on next run (until max attempts)
# 0 = only run STATUS=pending
DD_POST_RETRY_FAILED=1

# Max attempts for a row when retry is enabled
DD_POST_MAX_ATTEMPTS=3

# If a post redirects to upload-denied/share pages, optionally backoff+retry same row
DD_POST_DENIED_RETRIES=1
DD_POST_DENIED_BACKOFF_SECONDS=600

# Post content safety (reduce spam-like repeated characters)
# e.g. "hhhhhhhhhh" -> "hhhhhh" when max is 6
DD_POST_MAX_REPEAT_CHARS=6

# Caption (image post textarea) max length
DD_POST_CAPTION_MAX_LEN=300

# Tags input max length
DD_POST_TAGS_MAX_LEN=120

# Image download (HTTP/Google Drive) robustness
# If you post from URLs, slow links can timeout. These settings control retries.
DD_IMAGE_DOWNLOAD_TIMEOUT_SECONDS=90
DD_IMAGE_DOWNLOAD_RETRIES=3
DD_IMAGE_DOWNLOAD_RETRY_DELAY_SECONDS=5

# Auto push to git after run (if you have that workflow enabled)
DD_AUTO_PUSH=0
